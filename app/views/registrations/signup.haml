%p
  Enter your information to sign up for C$50 Finance
%form.form-inline{:action => '/registrations', :method => "post"}
  .form-group
    %label.sr-only{:for => "name"} Name
    %input.form-control{:name => "name", :placeholder => "name", :type => "text"}
    %br
    %label.sr-only{:for => "email"} E-mail
    %input.form-control{:name => "email", :placeholder => "email", :type => "text"}
    %br
    %label.sr-only{:for => "password"} Password
    %input.form-control{:name => "password", :placeholder => "password", :type => "text"}
    %br
    %br
    %button.btn.btn-default{:type => "submit"} Submit
